{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "lib": ["ES6"],
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "outDir": "./dist",
        "noLib": false,
        "preserveConstEnums": true,
        "strict": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "typings/browser",
        "typings/browser.d.ts",
        "examples"
    ]
}